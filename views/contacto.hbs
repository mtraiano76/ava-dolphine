
<link rel='stylesheet' href='/stylesheets/style-contacto.css' />


<div class="contacto p-32 background-image rounded-lg shadow-md min-h-85 h-full">
    <div class="mb-20 space-y-4 px-6 md:px-0 md:m-3">
      <div class="mx-10 p-10 bg-white rounded-3xl shadow-2xl xs:p-8 w-full lg:w-1/2">
        <h2 class="text-center text-5xl font-extrabold text-gray-800 mb-8">
            Contactanos
        </h2>
        <form action="/contacto" method="post" >
            <div class="-mx-2 md:items-center md:flex">
                <div class="flex-1 px-2">
                    <label class="block mb-2 text-sm text-white">Nombre</label>
                    <input type="text" name="nombre" id="nombres" placeholder="Nombre" class="text-xl block w-full px-5 py-2.5 mt-2 text-gray-600 placeholder-gray-400 bg-white border border-gray-200 rounded-lg  focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                </div>

                <div class="flex-1 px-2">
                    <label class="block mb-2 text-sm text-white">Apellido</label>
                    <input type="text" placeholder="Apellido" name="apellido" id="apellidos" class="text-xl  block w-full px-5 py-2.5 mt-2 text-gray-600 placeholder-gray-400 bg-white border border-gray-200 rounded-lg  focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
                </div>
            </div>

            <div class="mt-4">
                <label class="block mb-2 text-sm text-white">Email</label>
                <input type="email" name="email" id="nombres" placeholder="Email" class="text-xl  block w-full px-5 py-2.5 mt-2 text-gray-600 placeholder-gray-400 bg-white border border-gray-200 rounded-lg  focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
            </div>

            <div class="mt-4">
                <label class="block mb-2 text-sm text-white">Telefono</label>
                <input type="text" name="telefono" id="nombres" placeholder="Telefono" class="text-xl  block w-full px-5 py-2.5 mt-2 text-gray-600 placeholder-gray-400 bg-white border border-gray-200 rounded-lg  focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" />
            </div>

            <div class="w-full mt-4">
                <label class="block mb-2 text-sm text-white">Mensaje</label>
                <textarea name="comentarios" id="" class="text-xl block w-full h-32 px-5 py-2.5 mt-2 text-gray-600 placeholder-gray-400 bg-white border border-gray-200 rounded-lg md:h-56  focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" placeholder="Mensaje"></textarea>
            </div>

            <input type="submit" value="Enviar" class="w-full px-6 py-3 mt-4 text-xl font-bold tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-500 rounded-lg hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50">

        </form>
    </div>
    </div>
</div>